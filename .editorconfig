root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# JavaScript, TypeScript, JSON, CSS, and HTML files (frontend)
[*.{js,jsx,ts,tsx,json,css,scss,html}]

# Markdown files (documentation, README)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 4
tab_width = 4

#### Core EditorConfig Options ####

# Indentation and spacing
indent_size = 4
tab_width = 4

# New line preferences
end_of_line = crlf
insert_final_newline = false
